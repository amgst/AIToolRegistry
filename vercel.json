{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/api/scrapers/cron",
      "dest": "/api/scrapers/cron.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 60
    },
    "api/scrapers/cron.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/scrapers/cron",
      "schedule": "0 3 * * *"
    }
  ]
}